            <label for="lastName">Enter Last Name</label>
          </div> -->
          <div class="form-control" data-aos="fade-up-left" data-aos-duration="1500">
            <input type="text" name="branch" id="branch" required />
            <label for="branch">Enter Your Branch</label>
          </div>
          <div class="form-control" data-aos="fade-up-left" data-aos-duration="1500">
            <input type="text" name="batch" id="batch" required />
            <label for="batch">Enter Your Batch</label>
          </div>
          
          <div class="form-control" data-aos="fade-up-right" data-aos-duration="1500">
            <input type="email" name="email" id="email1" required />
            <label for="email1">Enter Institute Email ID...</label>
          </div>

          <div class="form-control" data-aos="fade-up-left" data-aos-duration="1500">
            <input type="email" name="email2" id="email2" required />
            <label for="email2">Enter Personal Email ID...</label>
          </div>

          <div class="form-control" data-aos="fade-up-right" data-aos-duration="1500">
            <input type="number" name="phone1" id="phone1" required />
            <label for="phone1">Enter Primary Phone No.</label>
          </div>
          
