          <div class="form-control" data-aos="fade-up-right" data-aos-duration="1500">
            <input type="password" name="password"id="password" required />
            <label for="password"> Password</label>
          </div>
    
          <div class="form-control" data-aos="fade-up-right" data-aos-duration="1500">
            <input type="password" name="confirm_password" id="confirm_password" required />
            <label for="confirm_password">Confirm Password</label>
          </div>

          <button class="button" data-aos="zoom-in-up" data-aos-duration="1500">Submit</button>
          
          <p class="text" style="margin-top: 20px;" data-aos="zoom-in" data-aos-duration="2000">Already have an account? <a href="/students/sign-in">Login</a><span style="margin-left:3rem"><a href="/">Go Back</a></span></p>
